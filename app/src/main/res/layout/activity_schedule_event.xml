<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_schedule_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.maksg.mobilebutler.ScheduleEventActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <TextView
                android:text="Событие успешно сформировано!\nПри необходимости Вы можете запустить процесс создания события заново."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_marginBottom="20dp"/>

        <TextView
                android:text="Выбранное дата и время: NaN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dateTimeTextView"
                android:layout_marginBottom="20dp"
                android:textStyle="normal|bold"/>

        <TextView
                android:text="Выбранные настройки: NaN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settingsTextView"
                android:layout_marginBottom="20dp"
                android:textStyle="normal|bold"/>

        <Button
                android:text="Пересоздать событие"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recreateButton"/>

        <Button
                android:text="Запланировать событие"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scheduleEventButton"/>
    </LinearLayout>
</RelativeLayout>
