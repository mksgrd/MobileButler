<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_choose_date_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.maksg.mobilebutler.ChooseDateTimeActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <TextView
                android:text="Измененные ранее настройки будут применены в указанные ниже дату и время"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selectedDateTime"
                android:textAlignment="center"/>

        <TextView
                android:text="Выбранная дата и время: NaN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textStyle="normal|bold"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

            <Button
                    android:text="Указать дату"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:layout_weight="1"
                    android:onClick="onPointDateButtonClick"/>

            <Button
                    android:text="Указать время"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:onClick="onPointTimeButtonClick"/>
        </LinearLayout>

        <Button
                android:text="Далее"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chooseDateTimeNextButton"
                android:onClick="onChooseDateTimeNextButtonClick"/>
    </LinearLayout>
</RelativeLayout>
