<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_choose_date_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.maksg.mobilebutler.ChooseDateTimeActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <TextView
                android:text="Измененные ранее настройки будут применены в указанные ниже дату и время"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textAlignment="center"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <DatePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/datePicker"
                    android:layout_weight="1"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"/>

            <TimePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/timePicker"
                    android:layout_weight="1"
                    android:timePickerMode="spinner"/>
        </LinearLayout>

        <Button
                android:text="Далее"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chooseDateTimeNextButton"
                android:onClick="onChooseDateTimeNextButtonClick"/>
    </LinearLayout>
</RelativeLayout>
